<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gr.ssgb.balancing.model.BalancingDAO">

	<sql id="searchWhere">
		<if test="searchKeyword!=null and searchKeyword!=''">
			where ${searchCondition} like '%' || #{searchKeyword} || '%'
		</if>
	</sql>

	<select id="selectBalancingAll" parameterType="searchVo" resultType="balancingVo">
	select *
		from
		( 
		    select rownum as RNUM, C.*
		    from
		    (
				select a.b_no, a.c_no, a.h_no, a.b_req_date, a.b_flag, b.ppnum, b.c_price
				from balancing a join class b
				on a.c_no=b.c_no
				<include refid="searchWhere"></include>
				order by a.b_no desc
			)C
		)
		<![CDATA[
		where RNUM>#{firstRecordIndex} 
			and RNUM<=#{firstRecordIndex}+ #{recordCountPerPage}]]>
	</select>

	<select id="selectTotalRecord" parameterType="searchVo" resultType="int">
		select count(*) from balancing
		<include refid="searchWhere"></include>	
	</select>
	
	<select id="totalPrice" resultType="balancingVo">
		select a.*, b.ppnum, b.c_price
		from balancing a join class b
		 on a.c_no=b.c_no
		 order by a.b_no desc
	</select>

	<select id="submitUpdate" parameterType="int">
		update balancing set b_flag='Y'				
		where b_No=#{b_No}
	</select>
</mapper>

