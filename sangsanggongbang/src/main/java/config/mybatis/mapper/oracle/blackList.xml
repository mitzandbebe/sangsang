	<select id="selectBlackListAll" resultType="blackListVo" parameterType="blackListVo">
		select *
		from(
		select b.* , m.m_id as mid,m.m_originalname as m_img_url
		from blacklist b left join member m
		on b.u_no = m.m_no
		)
		where hno = #{hno} order by regdate desc
	</select>
	
	<delete id="deleteBlackList" parameterType="int">
		delete blackList
		where bno=#{bno}
	</delete>
